html
  head
    title= title
    script.
        String.prototype.replaceAll = function(search, replace)
        {
            //if replace is not sent, return original string otherwise it will
            //replace search string with 'undefined'.
            if (replace === undefined) {
                return this.toString();
            }

            return this.replace(new RegExp('[' + search + ']', 'g'), replace);
        };

        var es = new EventSource('/stream');

        es.addEventListener('checkingFeed', function (event) {
            var output = document.getElementsByTagName('h2')[0];
            output.innerHTML = (event.data).replaceAll('"', '').replaceAll('\\\\', '');
        });

        es.addEventListener('message', function (event) {
            var output = document.getElementsByTagName('h3')[0];
            output.innerHTML = (event.data).replaceAll('"', '').replaceAll('\\\\', '') + '<br />' +  output.innerHTML;
        });

        es.addEventListener('foundLink', function (event) {
            var output = document.getElementsByTagName('h3')[0];
            output.innerHTML = output.innerHTML + '<br />Found post with sign up link! <br /><br />' 
                + (event.data).replaceAll('"', '').replaceAll('\\\\', '');
        });

        es.addEventListener('redirect', function (event) {
            var output = document.getElementsByTagName('h3')[0];
            if ((event.data).replaceAll('"', '')) {
                output.innerHTML = output.innerHTML
                    + '<br /><br /> Opening a new tab...';
                window.open((event.data).replaceAll('"', ''));
            } else {
                output.innerHTML = output.innerHTML
                    + '<br /><br /> Could not open a new tab :(';
            }
        });
